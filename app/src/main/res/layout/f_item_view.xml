<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"

    android:background="@color/WhiteSmoke">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_top_menu"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:id="@+id/ll_item_right"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:background="@drawable/button_selector"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_right"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_item_left"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@+id/ll_item_right"
                android:gravity="center"
                android:background="@drawable/button_selector"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_left"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_left"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_search_item"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/ll_item_left"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:background="@drawable/button_selector"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_search"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/sv_search_item"
                    android:textSize="12sp"
                    android:textColor="@color/Black"/>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/White">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="230dip"
                    android:background="@drawable/sample_view"
                    android:contentDescription="@string/abc_action_bar_home_description" />

                <LinearLayout
                    android:id="@+id/ll_detail_item"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</ScrollView>